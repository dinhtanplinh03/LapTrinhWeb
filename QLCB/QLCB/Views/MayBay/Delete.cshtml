@model QLCB.Models.MayBay

@{
    ViewData["Title"] = "Xóa máy bay";
}

<h2>Bạn có chắc chắn muốn xóa máy bay này không?</h2>

<div>
    <h4>Thông tin máy bay</h4>
    <dl class="row">
        <dt class="col-sm-2">Mã máy bay</dt>
        <dd class="col-sm-10">@Model.MaMayBay</dd>

        <dt class="col-sm-2">Loại máy bay</dt>
        <dd class="col-sm-10">@Model.LoaiMayBay</dd>

        <dt class="col-sm-2">Tầm bay</dt>
        <dd class="col-sm-10">@Model.TamBay</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="MaMayBay" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
